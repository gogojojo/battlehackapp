<div class="container">
  <div class="row">
    <div class="col-sm-5 col-sm-offset-3">
      <div class="login">
        <h1>Login</h1>
        <%= bootstrap_form_for(:user) do |f| %>
          <%= f.text_field :email %>
          <%= f.password_field :password %>
          <%= f.submit 'login' %>
        <% end %>
      </div>
    </div>
  </div>
</div>