<div class="row no-gutters">
  <div class="col-sm-2">
   <%= render 'sidebar' %>
 </div>
  <div class="col-sm-7">
      <div class="row no-gutters">
        <div class="col-sm-12 ">
          <div class="heading">
            <h1> New Trip </h1> 
          </div>
        </div>
        <div class="col-sm-12"><br>
        <div class="container">
          <div class="row">
            <div class="col-sm-5 col-sm-offset-1">
              <%= bootstrap_form_for(@event) do |f| %>
              <div class="form-group"><%= f.text_field :title, class: "form-group" %></div>
              <div class="form-group"><%= f.text_area :description, class: "form-group" %></div>
              <div class="form-group"><%= f.number_field :cost, class: "form-group" %></div>
              <div class="form-group"><%= f.text_field :date, class: "form-group" %></div>
              <div class="form-group"><%= f.submit %></div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      </div>
  </div>
  <div class="col-sm-3">
    <%= render 'chat' %>
  </div>
</div>
