
  <div class="row no-gutters">
    <div class="col-sm-2">
     <%= render 'sidebar' %>
   </div>
    <div class="col-sm-7">
        <div class="row no-gutters">
          <div class="col-sm-12 ">
            <div class="heading">
              <span class="date"><h4>21st December 2015  &nbsp;<%= fa_icon "calendar" %> <br></h4></span>
              <h1> <%= @event.title.upcase %> </h1> 
              organized by: <%= @event.user.name %> <br>
              total cost: $<%= @event.cost %><br>
              <% if @event.amount != nil %>
              remaining balance: $<%= @event.cost - (@event.amount.reduce(:+)) %>
              <% end %>
            </div>
          </div>
          <div class="col-sm-12 text-center">
              <%#<%= link_to 'edit event', edit_event_path(@event.id) %> 
              <% if @event.participants != nil %>
              <% if @event.participants.include?(current_user.id.to_s) %>
                <%= link_to 'remove yoself', part_path %><br>
              <% else %>
                <%= link_to 'add yoself', part_path %><br>
              <% end %>
              <h2> List of Participants </h2>
              <% @event.participants.each do |event| %>
              Paid amount: <%= @event.amount[@event.participants.index(event)] %>
              <% @a = User.find_by(id: event) %> <br>
              <%= @a.name %>  <br>
              <%= @a.email %><br>
              <% end %>
              <% if @event.participants.include?(current_user.id.to_s) %>
              <% if ( ((@event.cost/@event.participants.length) - (@event.amount[@event.participants.index(current_user.id.to_s)])).round(2) ) < 1   %>
              <span class ="pay-now"> Thanks for Chipping In </span>
              <% else %>
              <%= render 'payment/form' %>
              <% end %>
            
            <% else %>
            <span class ="pay-now"> Join the Group </span>
            <% end %>
            <% else %>
              <%= link_to 'add yoself', part_path %>
            <% end %>
            
          </div>
          <div class="col-sm-12 text-center">
          <% if @event.participants != nil %>
       
          <div class="overall-cost">Overall cost: $<%= @event.cost %> split between <%= @event.participants.length %> participants<br></div>
          </div>        
          <% end %>
        </div>
       
        <div class="row no-gutters">
          <div class="col-sm-6 list border-right">
            <div class="title"><%= fa_icon "users" %> &nbsp;Shared checklist &nbsp;&nbsp;<%= fa_icon "info-circle", class: "light" %></div>
            <div>
              <div class="padding-left">None for this trip!</div>
            </div>
          </div>
          <div class="col-sm-6 list">
            <div class="title"><%= fa_icon "lock" %> &nbsp;Private checklist &nbsp;&nbsp;<%= fa_icon "info-circle", class: "light" %></div>
            <div>
              <div class="padding-left green"><%= fa_icon "check-square-o" %> Passport</div>
              <div class="padding-left"><%= fa_icon "square-o" %> Sleeping Bag</div>
              <div class="padding-left green"><%= fa_icon "check-square-o" %> Art Materials</div>
              <div class="padding-left"><%= fa_icon "square-o" %> Signed Documents</div>
            </div>
          </div>
        </div>
    </div>
    <div class="col-sm-3">
      <%= render 'chat' %>
    </div>
  </div>


